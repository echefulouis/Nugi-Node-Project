<ul class="mt-5 list-group container">
    <div class="mb-3 w-75">
        <h1>Confirm Details</h1>
        <li class="list-group-item"><b>Recipient Name:</b>  <%=data.name%> </li>
        <li class="list-group-item"><b>Recipient Email:</b>   <%=data.email%></li>
        <li class="list-group-item"><b>Subject:</b>   <%=data.subject%></li>
        <li class="list-group-item"><b>Template:</b>   <%=data.template%></li>
        <li class="list-group-item"><b>Sender Name:</b> <%=projects[0].dataValues.name%></li>
        <li class="list-group-item"><b>Sender Email:</b> <%=projects[0].dataValues.email%></li>
        <li class="list-group-item"><b>Host:</b> <%=projects[0].dataValues.host%></li>
        <li class="list-group-item"><b>Port:</b> <%=projects[0].dataValues.port%></li>
    </div>

    <form class="form-inline my-2 my-lg-0" action="/sendmail">
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Send Mail</button>
    </form>
